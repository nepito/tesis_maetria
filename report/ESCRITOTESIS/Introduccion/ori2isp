sed "s/\\\'E/É/g" -i aux.$1 
sed "s/\\\'i/í/g" -i aux.$1 
sed "s/\\\'I/Í/g" -i aux.$1 
sed "s/\\\'o/ó/g" -i aux.$1 
sed "s/\\\'O/Ó/g" -i aux.$1 
sed "s/\\\'u/ú/g" -i aux.$1 
sed "s/\\\'U/Ú/g" -i aux.$1 
sed "s/\\\~n/ñ/g" -i aux.$1 
sed "s/\\\~N/Ñ/g" -i aux.$1 
